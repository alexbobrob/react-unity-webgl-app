{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "rootDir": "./source",
    "outDir": "./distribution",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": false,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "pretty": true,
    "removeComments": false
  }
}
